{
  "manifest_version": 3,
  "name": "Jaeheon Extension",
  "version": "0.1.0",
  "description": "AI(ChatGPT, Gemini) 답변 완료 알림 및 상태 관리",
  "background": {
    "service_worker": "sources/src/background.js"
  },
  "action": {
    "default_popup": "sources/src/popup.html",
    "default_icon": {
      "128": "sources/assets/bell_profile.png"
    }
  },
  "permissions": [
    "storage",
    "notifications",
    "tabs",
    "scripting",
    "alarms",
    "idle"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "sources/src/sites.js",
        "sources/src/content.js"
      ],
      "all_frames": true,
      "match_about_blank": true
    }
  ]
}
